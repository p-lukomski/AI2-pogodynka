{% extends 'base.html.twig' %}

{% block title %}Hello TextInputController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1>Test Submission Form</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">Submit</button>
    {{ form_end(form) }}

    {% if submittedText is not empty %}
        <h2>Submitted Text: </h2>
        <p>{{ submittedText }}</p>
        {# Pierwszy akapit - znaki specjalne zostały wklejone jako zwykły tekst, przez co przeglądarka nie widzi znacznika <script>, tylko &lt;script&gt; #}

        <p>{{ submittedText|raw }}</p>
        {# Drugi akapit - tutaj wykonał się skrypt, |raw wymusza wstawienie dokładnie tego co jest w polu tekstowym, więc przeglądarka wykryła znacznik
        <script> i go wykonała#}
        {# Brak sanityzacji może uczynic naszą stronę podatną na wstrzykiwanie nieporządanych rzeczy: skryptów, zapytań przez pola formularza #}
    {% endif %}
{% endblock %}
