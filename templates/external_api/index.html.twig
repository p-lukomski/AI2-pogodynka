{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h1>Weather Forecast</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">Submit</button>
    {{ form_end(form) }}

    {% if weatherData %}
        <h2>Data from Open Meteo</h2>
        <table>
            <thead>
            <tr>
                <th>Date</th>
                <th>Max Temperature</th>
                <th>Min Temperature</th>
                <th>Precipitation (mm)</th>
            </tr>
            </thead>
            <tbody>
                {% for i in 0..weatherData.daily.time|length-1 %}
                    <tr>
                        <td>{{ weatherData.daily.time[i] }}</td>
                        <td>{{ weatherData.daily.temperature_2m_max[i] }}</td>
                        <td>{{ weatherData.daily.temperature_2m_min[i] }}</td>
                        <td>{{ weatherData.daily.precipitation_sum[i] }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}
